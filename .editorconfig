# EditorConfig - https://editorconfig.org
# Matches STYLE_GUIDE.md for the Jervis project

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rule 1: Use consistent indenting - 4 spaces for code files
[*.{groovy,java,gradle}]
indent_style = space
indent_size = 4

# Configuration and data files use 2-space indent
[*.{yml,yaml,json,xml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
# Trailing whitespace can be significant in markdown (line breaks)
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Vagrantfile is Ruby
[Vagrantfile]
indent_style = space
indent_size = 2
